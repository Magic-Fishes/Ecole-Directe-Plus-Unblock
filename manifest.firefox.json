{
  "manifest_version": 3,
  "permissions": [
      "declarativeNetRequest",
      "declarativeNetRequestWithHostAccess",
      "scripting",
      "activeTab",
      "webRequest"
  ],
  "host_permissions": [
      "*://*.ecole-directe.plus/*",
      "*://*.ecoledirecte.com/*",
      "*://api.ecoledirecte.com/mot-de-passe-oublie.awp"
  ],
  "background": {
      "scripts": ["service-worker.js"]
  },
  "content_scripts": [
    {
      "matches":["*://api.ecoledirecte.com/mot-de-passe-oublie.awp"],
      "js": ["reset_password.js"],
      "css": ["reset_password.css"]
    }
  ],
  "declarative_net_request": {
      "rule_resources": [
          {
              "id": "change_origin",
              "enabled": true,
              "path": "rulesets/change_origin.json"
          }
      ]
  },
  "action": {
      "default_title": "Ecole Directe Plus â€¢ Unblock",
      "default_popup": "popup/popup.html"
  },
  "browser_specific_settings": {
      "gecko": {
          "id": "edpu-firefox-self-host@ecole-directe.plus",
          "update_url": "https://unblock.ecole-directe.plus/updates.json"
      }
  }
}